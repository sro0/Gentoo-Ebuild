<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <email>release@froxlor.org</email>
  </maintainer>
  <longdescription>A PHP-based webhosting-oriented control panel for servers.</longdescription>
  <use>
    <flag name='apache2'>Use Apache2 webserver</flag>
    <flag name='awstats'>Use AWStats traffic analyzer</flag>
    <flag name='bind'>Adds support to configure BIND DNS service</flag>
    <flag name='fcgid'>Adds support for FCGId</flag>
    <flag name='fpm'>Adds support for PHP-FPM</flag>
    <flag name='goaccess'>Use goaccess traffic analyzer</flag>
    <flag name='lighttpd'>Use ligHTTPd webserver</flag>
    <flag name='mailquota'>Adds support for Quotas for the maildirs of Customers</flag>
    <flag name='nginx'>Use nginx webserver</flag>
    <flag name='pdns'>Adds support to configure Power-DNS service</flag>
    <flag name='proftpd'>Use ProFTPD for FTP service</flag>
    <flag name='pureftpd'>Use pure-FTPd for FTP service</flag>
    <flag name='quota'>Adds support for Filesystem-Quotas</flag>
    <flag name='ssl'>Adds SSL support</flag>
    <flag name='webalizer'>Use webalizer traffic analyzer</flag>
  </use>
  <upstream>
    <remote-id type="cpe">cpe:/a:froxlor:froxlor</remote-id>
    <remote-id type="github">Froxlor/Froxlor</remote-id>
  </upstream>
</pkgmetadata>
